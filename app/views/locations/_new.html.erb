<div class="container">
  <div class="form-wrapper">
    <h2>Book your Friend</h2>
    <%= simple_form_for [@animal, @location] do |f| %>
      <%= f.input :start_date, label: "Select your dates:", as: :string, required: false, input_html: { id: "range_start", class: "datepicker"} %>
      <%= f.input :end_date, label: false, as: :string, required: false, input_html: { id: "range_end", class: "datepicker" } %>
      <%= f.button :submit, "Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
