<h1 id="add-title">Add A Best Friend </h1>
<div class="create-form">
<%= simple_form_for(@animal) do |f| %>
  <%= f.input :name %>
  <%= f.input :species %>
  <%= f.input :race %>
  <%= f.input :description %>
  <%= f.input :price_per_hour %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Add the animal", class: "btn-add" %>
<% end %>
</div>