<div class="form m-5">
  <%= form_tag animals_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a specific animal or a specific species"
    %>
    <%= button_tag do %>
      <%= icon 'fas', 'search' %>
    <% end %>
  <% end %>
</div>

<div class="container-cards-animals">
  <% @animals.each do |animal| %>
  <%= link_to animal_path(animal) do %>
    <div class="card-animal" style="background-image: url('<%= cl_image_path animal.photo.key, height: 300, width: 300, crop: :fill %>')">
      <p class="h2 name"><%= animal.name %></p>
      <p class="h2 species"><%= animal.species %></p>
      <p class="h2 price"><%= animal.price_per_hour %>â‚¬/h</p>
    </div>
    <% end %>
  <% end %>
</div>

<footer class="footer">
  <p>Made with <%= icon 'fas', 'heart' %> by Helpers' Team</p>
</footer>